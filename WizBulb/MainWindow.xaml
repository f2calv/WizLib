<Window
    x:Class="WizBulb.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:color="clr-namespace:DataTools.ColorControls;assembly=DataTools.ColorControls"
    xmlns:controls="clr-namespace:WizBulb.Controls"
    xmlns:conv="clr-namespace:WizBulb.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:WizBulb.Localization"
    xmlns:local="clr-namespace:WizBulb"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding WindowTitle}"
    Width="630"
    Height="365"
    Icon="pack://application:,,,/WizBulb;component/Resources/wiz.ico"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <conv:DistanceConverter x:Key="distConv" AsFeet="True" />
            <conv:MacAddrConverter x:Key="macConv" />
            <conv:EnumConverter x:Key="enumConv" />
            <conv:IntDisplayConverter
                x:Key="intConv"
                MaxValue="360"
                MinValue="1" />

            <DataTemplate x:Key="HeaderTemplateArrowUp">
                <DockPanel>
                    <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                    <Path
                        x:Name="arrow"
                        Data="M 5,10 L 15,10 L 10,5 L 5,10"
                        Fill="gray"
                        StrokeThickness="1" />
                </DockPanel>
            </DataTemplate>

            <DataTemplate x:Key="HeaderTemplateArrowDown">
                <DockPanel>
                    <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                    <Path
                        x:Name="arrow"
                        Data="M 5,5 L 15,5 L 10,10 L 5,5"
                        Fill="gray"
                        StrokeThickness="1" />
                </DockPanel>
            </DataTemplate>


            <conv:ColorBrushConverter x:Key="colorConv" />

            <Style TargetType="Button">

                <Setter Property="Background" Value="DarkSlateBlue" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="8" />
            </Style>

            <DataTemplate x:Key="DistanceTemplate">
                <StackPanel Orientation="Horizontal">
                    <controls:FadingTextBlock Text="{Binding Settings.Distance, Converter={StaticResource distConv}}" />
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="BulbTemplate">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border
                        Width="24"
                        Height="24"
                        Margin="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{Binding Settings.Color, Converter={StaticResource colorConv}}"
                        BorderBrush="Gray"
                        BorderThickness="1" />

                    <TextBox
                        Grid.Column="1"
                        Margin="4"
                        Background="Transparent"
                        BorderThickness="0"
                        GotFocus="TextBox_GotFocus"
                        IsEnabled="{Binding Renaming, Mode=TwoWay}"
                        LostFocus="TextBox_LostFocus"
                        Text="{Binding Name, Mode=TwoWay}" />

                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="AliceBlue">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="220" />
        </Grid.ColumnDefinitions>


        <Menu
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Padding="4"
            Background="Transparent"
            FontSize="14">
            <MenuItem x:Name="mnuFile" Header="_File">
                <MenuItem
                    x:Name="mnuOpenProject"
                    Click="mnuOpenProject_Click"
                    Header="_Open Project"
                    InputGestureText="Ctrl+O" />

                <MenuItem
                    x:Name="mnuNewProject"
                    Click="mnuNewProject_Click"
                    Header="_New Project"
                    InputGestureText="Ctrl+N" />

                <Separator />

                <MenuItem x:Name="mnuRecents" Header="Recent Projects" />

                <Separator />

                <MenuItem
                    x:Name="mnuSaveProject"
                    Click="mnuSaveProject_Click"
                    Header="_Save Project"
                    InputGestureText="Ctrl+S" />

                <MenuItem
                    x:Name="mnuSaveAs"
                    Click="mnuSaveAs_Click"
                    Header="_Save As..."
                    InputGestureText="Ctrl+Shift+S" />

                <Separator />

                <MenuItem
                    x:Name="mnuLoadLast"
                    Checked="mnuLoadLast_Checked"
                    Header="_Load Last Project on Startup"
                    IsCheckable="True" />
                <Separator />

                <MenuItem
                    x:Name="mnuQuit"
                    Click="mnuQuit_Click"
                    Header="_Quit"
                    InputGestureText="Ctrl+Q" />
                <Separator />

            </MenuItem>


        </Menu>




        <TabControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="8,2,8,8">

            <TabItem>
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Image
                            x:Name="BulbTabHdr"
                            Grid.Column="0"
                            Margin="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="pack://application:,,,/WizBulb;component/Resources/lightbulb.png" />

                        <TextBlock
                            Grid.Column="1"
                            Margin="2,4,4,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="10"
                            Text="{i18n:Translate ResourceKey=Bulbs}" />

                    </Grid>


                </TabItem.Header>

                <ListView
                    x:Name="BulbList"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0"
                    BorderThickness="0"
                    GridViewColumnHeader.Click="BulbList_Click"
                    ItemsSource="{Binding Bulbs}"
                    KeyDown="BulbList_KeyDown"
                    MouseDoubleClick="BulbList_MouseDoubleClick"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectedItem="{Binding SelectedBulb, Mode=TwoWay}"
                    SelectionChanged="BulbList_SelectionChanged">

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                x:Name="mnuPing"
                                Click="mnuPing_Click"
                                Header="{i18n:Translate ResourceKey=PingBulb}" />

                            <MenuItem
                                x:Name="mnuRename"
                                Click="mnuRename_Click"
                                Header="{i18n:Translate ResourceKey=Rename}" />

                            <Separator />

                            <MenuItem x:Name="mnuModes" Header="{i18n:Translate ResourceKey=LightModes}" />


                            <Separator />

                            <MenuItem
                                x:Name="mnuPower"
                                Header="{i18n:Translate ResourceKey=IsPoweredOn}"
                                IsCheckable="True"
                                IsChecked="{Binding SelectedBulb.IsPoweredOn, Mode=TwoWay}" />

                            <Separator />

                            <MenuItem
                                x:Name="mnuRefresh"
                                Click="mnuRefresh_Click"
                                Header="{i18n:Translate ResourceKey=Refresh}" />

                            <MenuItem
                                x:Name="mnuRefreshAll"
                                Click="mnuRefreshAll_Click"
                                Header="{i18n:Translate ResourceKey=RefreshAll}" />

                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <controls:BulbControl
                                Width="400"
                                Height="128"
                                ItemSource="{Binding}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Height" Value="128" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                IsItemsHost="True"
                                Orientation="Horizontal" />
                        </ItemsPanelTemplate>

                    </ListView.ItemsPanel>
                </ListView>



            </TabItem>

