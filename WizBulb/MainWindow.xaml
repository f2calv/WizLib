                                Width="120"
                                DisplayMemberBinding="{Binding Name}"
                                Header="{i18n:Translate ResourceKey=Name}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding RoomId}"
                                Header="{i18n:Translate ResourceKey=RoomId}" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding Bulbs.Count}"
                                Header="{i18n:Translate ResourceKey=Bulbs}" />
                        </GridView>
                    </ListView.View>
                </ListView>

            </TabItem>


        </TabControl>
