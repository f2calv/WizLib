        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="8,0,8,8"
            Padding="0"
            BorderBrush="{x:Static SystemColors.ActiveBorderBrush}"
            BorderThickness="1">

            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <color:ColorPicker
                    x:Name="ColorPicker"
                    Grid.Column="0"
                    ColorHit="ColorPicker_ColorHit"
                    InvertSaturation="True"
                    Mode="LinearHorizontal" />

                <Slider
                    x:Name="Slide"
                    Grid.Column="1"
                    Margin="8,0,8,0"
                    IsSnapToTickEnabled="True"
                    LargeChange="10"
                    Maximum="100"
                    Minimum="10"
                    Orientation="Vertical"
                    SmallChange="1"
                    TickFrequency="1"
                    TickPlacement="BottomRight"
                    ValueChanged="Slider_ValueChanged" />

                <Slider
                    x:Name="Speed"
                    Grid.Column="2"
                    Margin="8,0,8,0"
                    IsSnapToTickEnabled="True"
                    LargeChange="20"
                    Maximum="200"
                    Minimum="10"
                    Orientation="Vertical"
                    SmallChange="1"
                    TickFrequency="1"
                    TickPlacement="TopLeft"
                    ValueChanged="Speed_ValueChanged" />


            </Grid>

        </Border>


        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="3"
            Margin="16,8"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <Label Content="{i18n:Translate ResourceKey=SelectNetwork, AddColon=True}" />

            <ComboBox
                x:Name="cbIP"
                Margin="0,2,0,8"
                Padding="4"
                ItemsSource="{Binding Adapters}"
                SelectedItem="{Binding SelectedAdapter, Mode=TwoWay}"
                ToolTipService.ShowDuration="5000">

                <ComboBox.ToolTip>
                    <ToolTip
                        x:Name="ttNet"
                        Content="{Binding NetworkStatus}"
                        Visibility="{Binding ShowNetworkStatus, Mode=TwoWay}" />
                </ComboBox.ToolTip>

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Grid.ToolTip>
                                <ToolTip>
                                    <ToolTip.Template>
                                        <ControlTemplate>
                                            <Border
                                                Background="{x:Static SystemColors.InfoBrush}"
                                                BorderBrush="Black"
                                                BorderThickness="1">

                                                <Grid Margin="2">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <Label
                                                        Grid.Row="0"
                                                        Margin="4,2"
                                                        Padding="0"
                                                        Content="{Binding FriendlyName}"
                                                        FontWeight="Bold" />
                                                    <Label
                                                        Grid.Row="1"
                                                        Margin="4,0"
                                                        Padding="0"
                                                        Content="{Binding HasInternet, Converter={StaticResource enumConv}}" />
                                                    <Label
                                                        Grid.Row="2"
                                                        Margin="4,2"
                                                        Padding="0"
                                                        Content="{Binding IPV4Address}" />
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </ToolTip.Template>
                                </ToolTip>
                            </Grid.ToolTip>

                            <Image
                                Grid.Column="0"
                                Margin="4"
                                Source="{Binding DeviceIcon}" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="4,2"
                                Text="{Binding FriendlyName}" />

                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>

            </ComboBox>

            <Label Content="{i18n:Translate ResourceKey=TimeoutSeconds, AddColon=True}" />

            <TextBox
                x:Name="txtTimeout"
                Margin="0,2,0,8"
                Padding="4"
                Text="{Binding Timeout, Mode=TwoWay, Converter={StaticResource intConv}}">

                <TextBox.ToolTip>
                    <ToolTip
                        x:Name="ttTimeout"
                        Content="{Binding TimeoutStatus}"
                        Visibility="{Binding ShowTimeoutStatus, Mode=TwoWay}" />
                </TextBox.ToolTip>

            </TextBox>

            <Button
                x:Name="BtnScan"
                Click="BtnScan_Click"
                Content="{i18n:Translate ResourceKey=ScanForBulbs}"
                IsEnabled="{Binding ButtonsEnabled}" />

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <CheckBox
                    Margin="0,8,0,8"
                    VerticalAlignment="Center"
                    IsChecked="{Binding AutoWatch, Mode=TwoWay}">
                    <TextBlock VerticalAlignment="Center" Text="{i18n:Translate ResourceKey=LiveMonitor}" />
                </CheckBox>

                <TextBlock
                    Grid.Row="1"
                    Margin="0,2,0,8"
                    VerticalAlignment="Center"
                    Text="{i18n:Translate ResourceKey=RefreshInterval,
                                          AddColon=True}" />

                <TextBox
                    x:Name="txtInterval"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,2,0,8"
                    Padding="4"
                    VerticalAlignment="Center"
                    Text="{Binding Interval, Mode=TwoWay, Converter={StaticResource intConv}}" />

            </Grid>

        </StackPanel>


        <StatusBar
            Grid.Row="3"
            Grid.ColumnSpan="4"
            Background="DarkSlateBlue">

            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        x:Name="BulbCounter"
                        Margin="8,2,0,2"
                        Foreground="White"
                        Text="{Binding Bulbs.Count}" />

                    <TextBlock
                        Margin="0,2"
                        Foreground="White"
                        Text=" " />

                    <TextBlock
                        Margin="0,2,8,2"
                        Foreground="White"
                        Text="{i18n:Translate ResourceKey=Bulbs}" />

                </StackPanel>

            </StatusBarItem>
            <Separator />

            <StatusBarItem>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        x:Name="ColorLabel"
                        Margin="8,2"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{i18n:Translate AddColon=True,
                                              ResourceKey=Color}" />

                    <TextBlock
                        x:Name="ColorText"
                        Width="120"
                        Margin="8,2"
                        VerticalAlignment="Center"
                        FontFamily="Consolas"
                        Foreground="White"
                        Text="{Binding ElementName=ColorPicker, Path=SelectedColorName}" />

                    <Label
                        x:Name="ColorSwatch"
                        Width="24"
                        Height="24"
                        VerticalAlignment="Center"
                        Background="{Binding ElementName=ColorPicker, Path=SelectedColor, Converter={StaticResource colorConv}}"
                        BorderBrush="Black"
                        BorderThickness="1" />

                </StackPanel>

            </StatusBarItem>
            <Separator />
            <StatusBarItem
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Center">

                <controls:FadingTextBlock
                    x:Name="Status"
                    Margin="8,2"
                    Foreground="White"
                    Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>

    </Grid>

</Window>
