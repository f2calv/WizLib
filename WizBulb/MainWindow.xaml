            <TabItem>
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Image
                            x:Name="HomeTabHdr"
                            Grid.Column="0"
                            Margin="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />

                        <TextBlock
                            Grid.Column="1"
                            Margin="2,4,4,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="10"
                            Text="{i18n:Translate ResourceKey=Homes}" />

                    </Grid>


                </TabItem.Header>

                <ListView
                    x:Name="HomeList"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0"
                    BorderThickness="0"
                    GridViewColumnHeader.Click="HomeList_Click"
                    ItemsSource="{Binding Homes}"
                    KeyDown="BulbList_KeyDown"
                    SelectedItem="{Binding SelectedHome, Mode=TwoWay}"
                    SelectionChanged="HomeList_SelectionChanged">

                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Name}"
                                Header="{i18n:Translate ResourceKey=Name}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding HomeId}"
                                Header="{i18n:Translate ResourceKey=HomeId}" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding Rooms.Count}"
                                Header="{i18n:Translate ResourceKey=Rooms}" />
                        </GridView>
                    </ListView.View>
                </ListView>

            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Image
                            x:Name="RoomTabHdr"
                            Grid.Column="0"
                            Margin="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />

                        <TextBlock
                            Grid.Column="1"
                            Margin="2,4,4,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="10"
                            Text="{i18n:Translate ResourceKey=Rooms}" />

                    </Grid>


                </TabItem.Header>

                <ListView
                    x:Name="RoomList"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0"
                    BorderThickness="0"
                    GridViewColumnHeader.Click="RoomList_Click"
                    ItemsSource="{Binding Rooms}"
                    KeyDown="BulbList_KeyDown"
                    SelectedItem="{Binding SelectedRoom, Mode=TwoWay}"
                    SelectionChanged="RoomList_SelectionChanged">

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="mnuRoomModes" Header="{i18n:Translate ResourceKey=LightModes}" />

                            <Separator />

                            <MenuItem
                                x:Name="mnuRoomPower"
                                Header="{i18n:Translate ResourceKey=IsPoweredOn}"
                                IsCheckable="True"
                                IsChecked="{Binding SelectedBulb.IsPoweredOn, Mode=TwoWay}" />

                            <Separator />

                            <MenuItem
                                x:Name="mnuRoomRefresh"
                                Click="mnuRoomRefresh_Click"
                                Header="{i18n:Translate ResourceKey=Refresh}" />

                            <MenuItem
                                x:Name="mnuRoomRefreshAll"
                                Click="mnuRoomRefreshAll_Click"
                                Header="{i18n:Translate ResourceKey=RefreshAll}" />

                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
